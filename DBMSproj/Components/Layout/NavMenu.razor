@inject NavigationManager Navigation
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Employee</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All">
               
                <span>Home</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="Taxes">
               
                <span>Taxes</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="Attendance">
                
                <span>Attendance</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="BankDetails">
                
                <span>Bank Details</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="PayslipPage">
               
                <span>Payslip</span>
            </NavLink>
        </div>
        <button style="background: #dc3545;
    color: white;
    border-radius: 0.5em;
    width: 5em;
    margin-left: 2em;" @onclick="Logout">
            Logout
        </button>

        @code {
            [Inject]
            private NavigationManager Navigations { get; set; }

            [Inject]
            private EmployeeStateService EmployeeState { get; set; }

            private void Logout()
            {
                // Clear the employee ID
                EmployeeState.EmployeeId = string.Empty;

                // Navigate to login page
                Navigations.NavigateTo("/login");
            }
        }
       
    </nav>
</div>
